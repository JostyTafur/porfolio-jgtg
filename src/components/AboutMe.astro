---
import { geti18n } from "../i18n/"

const { currentLocale } = Astro
const i18n = geti18n({currentLocale})
---

<section class="flex flex-col-reverse md:flex-row gap-x-10 justify-center items-center">
    <div class="text-black dark:text-white [&>p]:mb-4 [&>p>strong]:text-orange-400 dark:[&>p>strong]:text-yellow-200 [&>p>strong]:font-semibold text-pretty">
        <p set:html={i18n.ABOUT_ME_FIRST_P}></p>
        <p set:html={i18n.ABOUT_ME_SECOND_P}></p>
        <p set:html={i18n.ABOUT_ME_THIRD_P}></p>
    </div>
    <img src="../../images/profile-photo.webp" alt="Foto de perfil" class=" mb-4 md:mb-0 object-cover w-64 h-full p-1 bg-black md:order-2 rotate-3 lg:p-2 lg:w-64 aspect-square rounded-2xl dark:bg-yellow-500/5 ring-1 ring-white/20 ">
</section>