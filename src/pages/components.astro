---
import Badge from "@/components/Badge.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import SocialPill from "@/components/SocialPill.astro";
import LinkedinIcon from "@/icons/Linkedin.astro";
import Layout from "@/layouts/Layout.astro";

---

<Layout title="Design System portfolio " description="El catalogo de componentes de nuestro portfolio">
    <SectionContainer class="py-44 pb-32 flex flex-col gap-y-10">
        <article>
            <h1 class="mb-4">&lt;Badge /&gt;</h1>
            <div class="flex">
                <Badge>Disponible para trabajar</Badge>
            </div>
        </article>

        <article>
            <h1 class="mb-4">&lt;SocialPill /&gt;</h1>
            <div class="flex ">
                <SocialPill href="https://twitter.com/astrodotbuild">
                    <LinkedinIcon class="size-4 md:size-6" />
                    Linkedin
                </SocialPill>
            </div>
        </article>
    </SectionContainer>
</Layout>